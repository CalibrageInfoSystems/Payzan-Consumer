<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fifteen"
            android:orientation="horizontal"
            android:weightSum="6">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/twentyDP"
                android:layout_weight="1"
                android:src="@drawable/visa" />

            <com.calibrage.payzanconsumer.framework.controls.CommonTextView
                android:layout_width="0dp"
                android:layout_height="@dimen/txt_height"
                android:layout_weight="4"
                android:text="@string/accountno"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_FontSize" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/twentyDP"
                android:layout_weight="0.5"
                android:src="@drawable/ic_edit"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/twentyDP"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/ic_rubbish_bin" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/twoDp"
            android:layout_marginLeft="@dimen/twentyDP"
            android:layout_marginRight="@dimen/twentyDP"
            android:background="@color/gray" />


    </LinearLayout>

</RelativeLayout>
